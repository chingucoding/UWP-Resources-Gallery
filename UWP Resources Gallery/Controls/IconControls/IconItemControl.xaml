<UserControl
    x:Class="UWPResourcesGallery.Controls.IconControls.IconItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    BorderBrush="AliceBlue"
    d:DesignWidth="200">

    <Grid Background="{ThemeResource SystemBaseLowColor}" Padding="5,5,5,5" MinWidth="210">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="0" Height="50" Width="50">
            <FontIcon x:Name="OwnIcon" 
                        FontFamily="{StaticResource SymbolThemeFontFamily}" Height="40" Width="40" 
                        Grid.Row="1"
                        Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
        </Viewbox>
        <TextBlock x:Name="IconCode" Grid.Row="0" Grid.Column="2" 
                    VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

        <TextBlock x:Name="IconName" Grid.Row="2" 
                    Grid.ColumnSpan="3" HorizontalAlignment="Center" TextWrapping="Wrap"
                    FontSize="18" Height="50"/>
    </Grid>
</UserControl>
